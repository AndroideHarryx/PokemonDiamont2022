<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ItemPokemon"
    android:id="@+id/fr_itempokemon"
    android:background="#C9FAF2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_nombrepoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_idpokedex"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/img_pokemon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/pokeball2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_idpokedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nroPokemon"
        app:layout_constraintStart_toEndOf="@+id/img_pokemon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="PS"
        app:layout_constraintStart_toEndOf="@+id/img_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipos" />

    <TextView
        android:id="@+id/txt_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PP"
        app:layout_constraintStart_toEndOf="@+id/img_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/txt_height"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/txt_tipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Tipos"
        app:layout_constraintStart_toEndOf="@+id/img_pokemon"
        app:layout_constraintTop_toBottomOf="@+id/txt_idpokedex" />

</androidx.constraintlayout.widget.ConstraintLayout>