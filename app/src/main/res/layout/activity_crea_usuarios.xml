<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreaUsuarios"
    android:background="@drawable/fondobienvenida">

    <TextView
        android:id="@+id/txt_crea_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea tu Cuenta"
        android:gravity="center"
        android:textSize="70px"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_crea_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Nombre"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@id/txt_crea_Titulo"
        app:layout_constraintEnd_toEndOf="@id/txt_crea_Titulo"
        app:layout_constraintTop_toTopOf="@id/txt_crea_Titulo"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_crea_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@id/txt_crea_usuario"
        app:layout_constraintEnd_toEndOf="@id/txt_crea_usuario"
        app:layout_constraintTop_toTopOf="@id/txt_crea_usuario"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_crea_password_verifica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Verifica Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@id/txt_crea_password"
        app:layout_constraintEnd_toEndOf="@id/txt_crea_password"
        app:layout_constraintTop_toTopOf="@id/txt_crea_password"/>
    <Button
        android:id="@+id/btn_crea_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Crear Cuenta"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/txt_crea_password_verifica"
        app:layout_constraintEnd_toEndOf="@id/txt_crea_password_verifica"
        app:layout_constraintTop_toTopOf="@id/txt_crea_password_verifica"/>

</androidx.constraintlayout.widget.ConstraintLayout>